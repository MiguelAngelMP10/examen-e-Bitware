<div class="container">
    <div class="form-group">
        <div class="card">
            <div class="card">
                <div class="card-header text-center">
                    Calcular IMC (Indice de Masa Corporal)
                </div>
                <div class="card-body">
                    <form action="calcularIMC" method="POST">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre"
                                placeholder="Introduzca el nombre">
                        </div>
                        <div class="form-group">
                            <label for="edad">Edad</label>
                            <input type="text" class="form-control" id="edad" name="edad"
                                placeholder="Introduzca la edad">
                        </div>
                        <div class="form-group">
                            <label for="sexo">Sexo</label>
                            <select name="sexo" id="sexo" class="form-control" name="sexo">
                                <option value="H">Hombre</option>
                                <option value="M">Mujer</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="peso">Peso</label>
                            <input type="number" class="form-control" id="peso" name="peso"
                                placeholder="Introduzca el peso">
                        </div>
                        <div class="form-group">
                            <label for="estatura">Estatura</label>
                            <input type="number" class="form-control" id="estatura" name="estatura" step="0.01"
                                placeholder="Introduzca la estatura">
                        </div>
                        <div class="row justify-content-center">
                            <button type="submit" class="btn btn-outline-primary col-2">Enviar</button>
                        </div>

                    </form>

                </div>
            </div>

        </div>

    </div>
</div>